public class ExactChangeNumber {

	private static final int NUM_DENOMINATIONS = 3;
	private static final int PENCES_IN_POUND = 240;
	private static final int INF = 10000;// max can be if all denominations are
											// 1

	/**
	 * 
	 * @return ignore index 0
	 */
	private static int[] getCosts(int[] denominations) {
		int[] results = new int[PENCES_IN_POUND];
		for (int index = results.length - 1; index > 0; index--) {
			results[index] = INF;
		}

		for (int index = results.length - 1; index > 0; index--) {
			if (results[index] == INF) {
				calculateResult(index, results, denominations);
			}
		}

		return results;
	}

	private static int calculateResult(int index, int[] results,
			int[] denominations) {
		if(index<1){
			return INF;
		}
		
		if (results[index] == INF) {
			for( int denomination : denominations){
				int costWithThisDenomination = calculateResult(index-denomination, results,denominations);
				if(costWithThisDenomination<results[index]){
					//better result found
					results[index]=costWithThisDenomination;
				}
			}
		}
		return results[index];
	}
}
